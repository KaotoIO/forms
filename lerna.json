{
  "$schema": "node_modules/@lerna-lite/cli/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "yarn",
  "verbose": true,
  "packages": [
    "./"
  ],
  "conventionalCommits": true,
  "changelog": true,
  "message": "chore(release): publish",
  "command": {
    "publish": {
      "tag": true,
      "push": true,
      "pushArgs": [
        "--follow-tags"
      ],
      "ignore": [
        "**/README.md",
        "**/.github/**"
      ],
      "yes": true
    }
  },
  "useWorkspaces": false
}
